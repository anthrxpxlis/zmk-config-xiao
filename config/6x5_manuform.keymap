#include <behaviors.dtsi>
#include "keys_de.h"
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC   |  1  |  2  |  3   |  4   |  5   |                    |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB   |  Q  |  W  |  E   |  R   |  T   |                    |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL  |  A  |  S  |  D   |  F   |  G   |                    |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT  |  Z  |  X  |  C   |  V   |  B   |                    |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            // |    2   |  2  | f   | 6    | 4    | 1    |                    | 2    | 1     | w     | s    | n     |  a    |

            bindings = <
  &kp ESC    &kp N1         &kp N2           &kp N3           &kp N4           &kp N5    &kp N6    &kp N7    &kp N8    &kp N9     &kp N0     &kp EQUAL
  &kp TAB  &kp DE_K  &kp DE_PERIOD         &kp DE_O     &kp DE_MINUS         &kp DE_Y  &kp DE_V  &kp DE_G  &kp DE_C  &kp DE_L  &kp DE_SZ  &kp DE_TILDE
&kp LSHFT  &kp DE_H       &kp DE_A         &kp DE_E         &kp DE_I         &kp DE_U  &kp DE_D  &kp DE_T  &kp DE_R  &kp DE_N   &kp DE_S      &kp DE_F
&kp GRAVE  &kp DE_X       &kp DE_Q  &kp DE_A_UMLAUT  &kp DE_U_UMLAUT  &kp DE_O_UMLAUT  &kp DE_B  &kp DE_P  &kp DE_W  &kp DE_M   &kp DE_J     &kp SLASH
&kp LCTRL  &kp BSPC          &sl 1        &kp LSHFT        &kp SPACE         &kp LALT  &kp RALT   &kp RET  &kp RGUI     &mo 2    &kp DEL     &kp RCTRL
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |                   |      |  _    |  +    |  {   |   }   |  "|"  |
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |

            bindings = <
      &bt BT_CLR       &bt BT_SEL 0       &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &kp DE_N1      &kp DE_N2    &kp DE_N3     &kp DE_SLASH     &kp DE_BACKSLASH           &kp DE_PIPE
          &kp F1             &kp F2             &kp F3        &kp F4        &kp F5        &kp F6  &kp DE_N4      &kp DE_N5    &kp DE_N6  &kp KP_MULTIPLY             &kp LPAR              &kp RPAR
          &kp F7             &kp F8             &kp F9       &kp F10       &kp F11       &kp F12  &kp DE_N7      &kp DE_N8    &kp DE_N9      &kp KP_PLUS  &kp DE_LEFT_BRACKET  &kp DE_RIGHT_BRACKET
&ext_power EP_ON  &ext_power EP_OFF  &ext_power EP_TOG   &bootloader        &trans        &trans  &kp DE_N0  &kp DE_PERIOD  &kp KP_PLUS     &kp KP_MINUS    &kp DE_LEFT_BRACE    &kp DE_RIGHT_BRACE
          &trans             &trans             &trans        &trans        &trans        &trans     &trans         &trans       &trans           &trans               &trans                &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |		             |  +   |   -   |   =   |  [   |   ]   |   \   |
            // |     |     |      |      |      |        |                   |       |      |       |       |      |       |

            bindings = <
           &kp 0            &kp                &kp                  &kp                   &kp              &kp                      &kp                       &kp                  &kp               &kp               &kp   &kp 0
       &kp GRAVE         &kp N1             &kp N2  &kp DE_LEFT_BRACKET  &kp DE_RIGHT_BRACKET     &kp DE_CARET       &kp DE_EXCLAMATION          &kp DE_LESS_THAN  &kp DE_GREATER_THAN      &kp DE_EQUAL  &kp DE_AMPERSAND     &kp
&kp DE_BACKSLASH   &kp DE_SLASH  &kp DE_LEFT_BRACE   &kp DE_RIGHT_BRACE       &kp DE_ASTERISK  &kp DE_QUESTION  &kp DE_LEFT_PARENTHESIS  &kp DE_RIGHT_PARENTHESIS         &kp DE_MINUS      &kp DE_COLON    &kp DE_AT_SIGN     &kp
     &kp DE_HASH  &kp DE_DOLLAR        &kp DE_PIPE         &kp DE_TILDE          &kp DE_GRAVE      &kp DE_PLUS           &kp DE_PERCENT      &kp DE_DOUBLE_QUOTES  &kp DE_SINGLE_QUOTE  &kp DE_SEMICOLON            &trans  &trans
             &kp            &kp                &kp                  &kp                   &kp              &kp                      &kp                       &kp                  &kp               &kp               &kp     &kp
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
